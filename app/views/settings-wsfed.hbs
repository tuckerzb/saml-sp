<div class="col-md-8 col-md-offset-2">
  <form id="settings" class="form-settings form-horizontal" role="form" method="POST">

   <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Identity Provider Settings</h3>
      </div>
      <div class="panel-body">

        <div class="form-group">
          <label for="idpIssuer" class="col-sm-4 control-label">Issuer</label>
          <div class="col-sm-8">
            <input id="idpIssuer" class="form-control" name="idpIssuer" type="text" required="" value="{{config.idpIssuer}}">
          </div>
        </div>

        <div class="form-group">
          <label for="idpSsoUrl" class="col-sm-4 control-label">SSO URL</label>
          <div class="col-sm-8">
            <input id="idpSsoUrl" class="form-control" name="idpSsoUrl" type="text" required="" value="{{config.idpSsoUrl}}">
          </div>
        </div>

      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Relying Party Settings</h3>
      </div>
      <div class="panel-body">

        <div class="form-group">
          <label for="realm" class="col-sm-4 control-label">Realm</label>
          <div class="col-sm-8">
            <input id="realm" class="form-control" name="realm" type="text" required="" value="{{config.audience}}">
          </div>
        </div>

        <div class="form-group">
          <label for="defaultRelayState" class="col-sm-4 control-label">Default Request Context</label>
          <div class="col-sm-8">
            <input id="defaultRelayState" class="form-control" name="defaultRelayState" type="text" value="{{config.defaultRelayState}}">
          </div>
        </div>

      </div>
    </div>

    <div class="form-group">
      <div class="col-md-12 text-right">
        <a href="/" class="btn btn-default input-xlarge">Cancel</a>
        <button type="submit" class="btn btn-primary input-xlarge">Save</button>
      </div>
    </div>

  </form>
</div>
